<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"




    app:columnCount="4"
    app:rowCount="3"

    android:layout_centerHorizontal="true"
    app:alignmentMode="alignBounds"
    app:rowOrderPreserved="false"
    app:useDefaultMargins="true">

    <!--Column 0-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Life"

        app:layout_column="0"
        app:layout_row="0"

        app:layout_columnWeight="1.0"

        app:layout_gravity="fill_horizontal"

        style="@style/ValueLabelText"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"




        app:layout_column="0"
        app:layout_row="1"
        app:layout_gravity="fill_horizontal"
        app:layout_columnWeight="1.0"

        tools:text="20"

        style="@style/ValueText"/>

    <!--Column 1-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Infect"


        app:layout_column="1"
        app:layout_row="0"

        app:layout_columnWeight="1.0"
        app:layout_gravity="fill_horizontal"


        style="@style/ValueLabelText"    />



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"



        app:layout_column="1"
        app:layout_row="1"

        app:layout_columnWeight="1.0"
        app:layout_gravity="fill_horizontal"

        tools:text="20"

        style="@style/ValueText"/>

    <!--Column 2-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Commander Damage Taken From"



        app:layout_column="2"
        app:layout_row="0"

        app:layout_columnWeight="1.0"
        app:layout_gravity="fill_horizontal"


        style="@style/ValueLabelText"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="20"

        app:layout_column="2"
        app:layout_row="1"

        app:layout_columnWeight="1.0"
        app:layout_gravity="fill_horizontal"

        
        style="@style/ValueText"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_columnWeight="1.0"
        app:layout_column="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="20dp"

            android:layout_weight="1"

            android:text="-"


            style="@style/FlatButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="20dp"

            android:layout_weight="1"

            android:text="+"

            style="@style/FlatButton"/>

    </LinearLayout>
    <!--Column 3-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Commander Damage Dealt To"


        app:layout_column="3"
        app:layout_row="0"

        app:layout_columnWeight="1.0"
        app:layout_gravity="fill_horizontal"


        style="@style/ValueLabelText"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"



        app:layout_column="3"
        app:layout_row="1"

        app:layout_columnWeight="1.0"
        app:layout_gravity="fill_horizontal"

        tools:text="20"

        style="@style/ValueText"/>


</android.support.v7.widget.GridLayout>
