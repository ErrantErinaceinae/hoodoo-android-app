<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="100dp"

    app:columnCount="1"
    app:rowCount="1">

    <HorizontalScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_column="0"
        app:layout_row="0"

        app:layout_columnWeight="1.0"
        app:layout_rowWeight="1.0">

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:padding="10dp"

            android:minWidth="700dp"

            app:columnCount="4"
            app:rowCount="3"

            app:alignmentMode="alignBounds"
            app:rowOrderPreserved="false"
            app:useDefaultMargins="false">

            <!--Column 0-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="Life"

                app:layout_column="0"
                app:layout_row="0"

                app:layout_columnWeight="0.5"
                app:layout_rowWeight="1.0"

                app:layout_gravity="fill_horizontal"

                style="@style/ValueLabelText"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_column="0"
                app:layout_row="1"

                app:layout_columnWeight="0.5"
                app:layout_rowWeight="1.0"

                app:layout_gravity="fill_horizontal"

                tools:text="20"

                style="@style/ValueText"/>

            <!--Column 1-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="Infect"


                app:layout_column="1"
                app:layout_row="0"

                app:layout_columnWeight="0.5"
                app:layout_rowWeight="1.0"

                app:layout_gravity="fill_horizontal"

                style="@style/ValueLabelText"    />



            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"



                app:layout_column="1"
                app:layout_row="1"

                app:layout_columnWeight="0.5"
                app:layout_rowWeight="1.0"
                app:layout_gravity="fill_horizontal"

                tools:text="20"

                style="@style/ValueText"/>

            <!--Column 2-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="Commander Damage \n (Taken From)"

                app:layout_column="2"
                app:layout_row="0"

                app:layout_columnWeight="1.0"
                app:layout_rowWeight="1.0"

                app:layout_gravity="fill_horizontal"

                style="@style/ValueLabelText"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="20"

                app:layout_column="2"
                app:layout_row="1"

                app:layout_columnWeight="1.0"
                app:layout_rowWeight="1.0"

                app:layout_gravity="fill_horizontal"


                style="@style/ValueText"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_columnWeight="1.0"
                app:layout_rowWeight=".7"

                app:layout_column="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"

                    android:text="-"

                    style="@style/FlatButton"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"

                    android:text="+"

                    style="@style/FlatButton"/>

            </LinearLayout>
            <!--Column 3-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Commander Damage \n (Dealt To)"


                app:layout_column="3"
                app:layout_row="0"

                app:layout_columnWeight="1.0"
                app:layout_rowWeight="1.0"

                app:layout_gravity="fill_horizontal"


                style="@style/ValueLabelText"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"



                app:layout_column="3"
                app:layout_row="1"

                app:layout_columnWeight="1.0"
                app:layout_rowWeight="1.0"

                app:layout_gravity="fill_horizontal"

                tools:text="20"

                style="@style/ValueText"/>


        </android.support.v7.widget.GridLayout>
    </HorizontalScrollView>


</android.support.v7.widget.GridLayout>